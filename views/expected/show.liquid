{% layout 'layout.liquid' %}
{% block content %}
<h2>Expense</h2>
<div class="container-md show">
    <h5>Name: {{item.name}}</h5>
    <h6>Date: {{item.date}}</h6>
    <h6>Amount: ${{item.amount}}</h6>
    <h6>Description: {{item.description}}</p>
    <h6>Category: {{item.category}}</h6>
