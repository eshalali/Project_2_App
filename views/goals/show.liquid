{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <h2>Goal</h2>
    <h5>Name: {{goal.name}}</h5>
    <h6>Description: {{goal.description}}</p>
    <div>
        <a href="/goals/{{goal._id}}/edit" class="btn btn-primary">Edit goal</a>
    </div>
    <div>
        <form action="/goals/{{goal._id}}?_method=DELETE" method="POST">
            <input type="submit" value="Delete goal" class="btn btn-default">
        </form>
    </div>
</div>

{% endblock %}